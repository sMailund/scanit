<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.scanit.GarmentInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="662dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="28sp"
                    android:text="Results:" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/infoItemPaddingBottom"
                android:paddingLeft="@dimen/infoItemPaddingLeft">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space"
                    android:textSize="@dimen/infoItemTextSize"
                    android:text="@string/made_in" />

                <TextView
                    android:id="@+id/result_madein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/infoItemTextSize"
                    tools:text="Austria" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/infoItemPaddingBottom"
                android:paddingLeft="@dimen/infoItemPaddingLeft">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space"
                    android:text="@string/work_conditions"
                    android:textSize="@dimen/infoItemTextSize" />

                <TextView
                    android:id="@+id/result_workconditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/infoItemTextSize"
                    tools:text="Good" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/infoItemPaddingBottom"
                android:paddingLeft="@dimen/infoItemPaddingLeft">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space"
                    android:text="@string/materials"
                    android:textSize="@dimen/infoItemTextSize" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/materialsContainer"></LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/infoItemPaddingBottom"
                android:paddingLeft="@dimen/infoItemPaddingLeft">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space"
                    android:text="@string/co2_emissions"
                    android:textSize="@dimen/infoItemTextSize" />

                <TextView
                    android:id="@+id/result_CO2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/infoItemTextSize"
                    tools:text="6" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-80dp"
            android:layout_marginRight="-70dp"
            android:background="@drawable/circle_green">

        </ImageView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textSize="28sp"
            android:layout_marginBottom="75dp"
            android:layout_marginLeft="@dimen/infoItemPaddingLeft"
            android:text="Sustainometer:" />

        <ImageView
            android:id="@+id/sustainometerCircleRed"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-80dp"
            android:layout_marginRight="-70dp"
            android:visibility="invisible"
            android:background="@drawable/circle_red">

        </ImageView>

        <TextView
            android:id="@+id/sustainometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            tools:text="90%"
            android:textColor="@android:color/black"
            android:textSize="36sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
